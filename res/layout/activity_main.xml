<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/deleteForgetButton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_above="@+id/existForgetButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/main_forget_button_selector"
        android:text="@string/delete_forget" />

    <Button
        android:id="@+id/addForgetButton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/existForgetButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="85dp"
        android:background="@drawable/main_forget_button_selector"
        android:text="@string/add_forget" />

    <Button
        android:id="@+id/existForgetButton"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_above="@+id/deleteForgetButton"
        android:layout_alignLeft="@+id/addForgetButton"
        android:layout_marginBottom="20dp"
        android:background="@drawable/main_forget_button_selector"
        android:text="@string/exist_forget" />

</RelativeLayout>
