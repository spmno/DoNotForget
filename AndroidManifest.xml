<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spmno.donotforget"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.spmno.donotforget.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.spmno.donotforget.CreateForgetActivity"
            android:label="@string/title_activity_create_forget"
            android:windowSoftInputMode="adjustPan"
             >
        </activity>
        <activity
            android:name="com.spmno.donotforget.CreateForgetItemActivity"
            android:label="@string/title_activity_create_forget_item" >
        </activity>
        <activity
            android:name="com.spmno.donotforget.ExistForgetActivity"
            android:label="@string/title_activity_exist_forget" >
        </activity>
    </application>

</manifest>
